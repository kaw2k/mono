{
  "name": "verses-shared",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --format esm,cjs --dts --external react",
    "clean": "rm -rf dist",
    "dev": "tsup src/index.tsx --format esm,cjs --watch --dts --external react",
    "lint": "eslint \"src/**/*.ts*\"",
    "generate": "npm run generate:verses && npm run generate:verses-compressed",
    "generate:verses": "tsnd generate-data/verses-uncompressed.ts",
    "generate:verses-compressed": "tsnd generate-data/verses-compressed.ts",
    "scrape": "tsnd scrape-data/scrape.ts"
  },
  "dependencies": {
    "constate": "^3.3.2",
    "toolbox": "*"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.31",
    "@types/cli-progress": "^3.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.1",
    "@types/yargs": "^17.0.24",
    "cheerio": "^1.0.0-rc.12",
    "cli-progress": "^3.12.0",
    "cypress": "^12.11.0",
    "eslint": "8.39.0",
    "eslint-config-custom": "*",
    "firebase": "^9.22.2",
    "isomorphic-unfetch": "^4.0.2",
    "react": "^18.2.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig": "*",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4",
    "yargs": "^17.7.2"
  }
}
