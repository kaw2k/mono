{
  "extends": "tsconfig/react-library.json",
  "include": [".", "./index.d.ts"],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true
  },
  "ts-node": {
    "compilerOptions": {
      "isolatedModules": false,
      "module": "CommonJS"
    }
  }
}
